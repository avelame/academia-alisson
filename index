        <li><strong>Rosca Alternada</strong> - 3x12-15 (sem momentum)</li>
        <li><strong>Tríceps Testa</strong> - 4x8-10 (carga moderada, amplitude total)</li>
        <li><strong>Tríceps Corda (Polia Alta)</strong> - 3x8 + 10 reps + 12 reps (aumento progressivo de reps na mesma série)</li>
        <li><strong>Tríceps Francês</strong> - 3x15 (peso leve, foco no pump)</li>
      </ol>
    </div>
  </section>

  <!-- SCRIPT PARA TROCAR SEÇÕES -->
  <script>
    function mostrarSecao(dia) {
      // Esconde todas as sections
      document.querySelectorAll('section').forEach(secao => {
        secao.classList.remove('active');
      });
      // Mostra apenas a seção correspondente
      document.getElementById(dia).classList.add('active');
    }
  </script>
